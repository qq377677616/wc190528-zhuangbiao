/* pages/login/login.wxss */
.l_hander{
     position: fixed;
     left: 0;
     top: 40rpx;
     width:100%;
     height: 80rpx;
     background-color: #000000; 
     line-height: 80rpx;
     text-align: center;
     /* margin-bottom: 60rpx; */
     color: white;
     font-size: 28rpx;
     font-weight: 600;
}
.logo{
     width: 128rpx;
     position: fixed;
     height: auto;
     left: 50%;
     top: 16%;
     transform: translateX(-50%);
}
.userbox{
     width: 80%;
     position: fixed;
     transform: translate(-50%,-50%);
     left: 50%;
     top: 55%;
}
.userbox .hytxt{
      font-size: 28rpx;
      font-weight: 600;
      width: 100%;
      display: block;
      padding-bottom: 32rpx;
      border-bottom: 1rpx solid #A9A9A9;
}
.iptbox,.iptbox2{
      width: 100%;
      display: block;
      border-bottom: 1rpx solid #A9A9A9;
      height:88rpx;  
}
.iptbox input,.iptbox2 input{
      display: block;
      float: left;
      height: 100%;
      text-indent: 20rpx;
      font-size: 28rpx;
      width: 80%;
}
.iptbox2 input{
       width: 50%;
}
.pstyle{
      font-size: 24rpx;
      color: #A9A9A9;  
}
.onready{
       color: #A9A9A9;
       font-size: 20rpx;
       float: left;
       padding-top: 5rpx;
}
.loginbtn{
       height: 70rpx;
       background-color: #999999;
       color: #FFFFFF;
       font-size: 30rpx;
       line-height: 70rpx;
       margin-top: 58rpx;
}
.wxlogin{
       width:204rpx;
       position: fixed;
       left: 50%;
       top: 90%;
       transform: translate(-50%,-50%); 
}
.getcode{
       float: right;
       font-size: 24rpx;
       display: block;
       padding: 10rpx 6rpx;
       border: 1rpx solid #000;
       border-radius: 10rpx;
       margin-top: 16rpx;
}
.wid{
       width: 140rpx;
       text-align: center; 
}
.noselect{
       width: 18rpx;
       padding-right: 10rpx;
       float: left;
       padding-top: 10rpx;
}
.hide{
       display:none !important;  
}
.show{
       display: block !important; 
}
.addbg{
      color: #000;
}
.btnadd{
      background-color: #000;
      color: white;
}