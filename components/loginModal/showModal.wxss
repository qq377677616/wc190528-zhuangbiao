/* components/showModal/showModal.wxss */
.showModal{position: fixed;width:100%;height:100%;left: 0;top:0;background: rgba(0,0,0,.7);color:#333;z-index: 999999;text-align: center;}
.showModal .showModal-box{width:82%;background: #fff;border-radius: 10rpx;position: absolute;left:50%;top:50%;transform: translate(-50%, -50%);}
.showModal .h3{font-size: 36rpx;padding-top: 40rpx;}
.showModal .p{font-size: 30rpx;color:#999;line-height: 1.5;padding: 30rpx 60rpx;}
.showModal .btn{display: flex;border-top:1rpx solid #ddd;}
.showModal .btn>view{flex:1;height: 92rpx;line-height: 92rpx;font-size: 34rpx;}
.showModal .btn .cancel{border-right:1rpx solid #ddd;}
.btn button{width: 50%;background-color:transparent;}
.btn button::after{
   border: none
}
